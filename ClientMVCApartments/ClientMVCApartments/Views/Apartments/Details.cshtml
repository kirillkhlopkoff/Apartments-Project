@model Apartment

@{
    ViewData["Title"] = "Apartment Details";
}

<h1>@ViewData["Title"]</h1>

<p>
    <strong>Owner:</strong> @Model.Owner
</p>
<p>
    <strong>Title:</strong> @Model.Title
</p>
<p>
    <strong>Address:</strong> @Model.Address
</p>
<p>
    <strong>Price:</strong> @Model.Price
</p>
<p>
    <strong>Rooms:</strong> @Model.Rooms
</p>
<p>
    <strong>Description:</strong> @Model.Description
</p>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="UnActivate" asp-route-id="@Model.Id">UnActivate</a>
</p>